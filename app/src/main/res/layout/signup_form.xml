<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BaapLL"
    android:background="@drawable/signup_background">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollX"
        >



        <LinearLayout
            xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingBottom="@dimen/activity_vertical_margin" android:orientation="vertical"
            android:id="@+id/main_ll"

            >


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/back"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="30dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Sign Up"
                    android:id="@+id/label_signup"
                    android:textColor="#fff"
                    android:gravity="left"
                    android:textSize="40dp"></TextView>

            </LinearLayout>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/name_reg"
                android:textColor="#B1B1B2"
                android:hint="Username"
                android:drawablePadding="8dp"
                android:maxLines="1"
                android:textColorHint="#fff"
                android:layout_above="@+id/phone_reg"
                android:layout_marginTop="70dp"
                android:drawableLeft="@drawable/ic_person_outline_white_24dp"
                android:drawableTint="#B1B1B2"
                android:theme="@style/MyEditTextTheme"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/phone_reg"
                android:textColor="#B1B1B2"
                android:inputType="number"
                android:hint="Phone Number"
                android:drawablePadding="8dp"
                android:layout_marginTop="10dp"
                android:maxLines="1"
                android:textColorHint="#fff"
                android:layout_above="@+id/reppassword_reg"
                android:drawableLeft="@drawable/ic_smartphone_white_24dp"
                android:drawableTint="#B1B1B2"
                android:theme="@style/MyEditTextTheme"/>



            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/password_reg"
                android:drawablePadding="8dp"
                android:hint="Password"
                android:textColor="#B1B1B2"
                android:textColorHint="#fff"
                android:theme="@style/MyEditTextTheme"
                android:drawableLeft="@drawable/ic_lock_open_white_24dp"
                android:inputType="textPassword"
                android:drawableTint="#B1B1B2"
                android:layout_marginTop="10dp"
                android:ems="10"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/reppassword_reg"
                android:layout_marginTop="10dp"
                android:drawablePadding="8dp"
                android:hint="Repeat Password"
                android:textColor="#B1B1B2"
                android:textColorHint="#fff"
                android:theme="@style/MyEditTextTheme"
                android:drawableLeft="@drawable/ic_lock_open_white_24dp"
                android:inputType="textPassword"
                android:drawableTint="#B1B1B2"
                android:ems="10"/>

            </LinearLayout>


    </ScrollView>

       <!--
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/register_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:elevation="10dp"
            android:src="@drawable/ic_check_circle_white_24dp"
            app:backgroundTint="#F73688"
            android:onClick="registerUser"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"

            />
            -->

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join"
        android:layout_above="@+id/xx"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:layout_marginBottom="40dp"
        android:textSize="16dp"
        android:id="@+id/login_button"
        android:background="#3181DA"
        android:textColor="#fff"
        android:layout_marginTop="20dp"
        android:onClick="registerUser"/>





</RelativeLayout>